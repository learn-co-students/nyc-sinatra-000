<h1>Landmarks</h1>
<a href='/landmarks/new'>Create</a><br><br>
<table>
  <tr>
    <th>Name</th>
    <th>Year Completed</th>
    <th>Founder</th>
    <th>Titles of the Founder</th>
    <th>Edit</th>
  </tr>
  <% Landmark.all.each do |landmark| %>
  <tr>
    <td><a href='<%= "landmarks/#{landmark.id}" %>'><%= landmark.name %></a></td>
    <td><%= landmark.year_completed %></td>
    <td><%= landmark.figure.name %></td>
    <td><%= landmark.figure.titles.reduce("") { |str, e| str == "" ? str << e.name : str << ", #{e.name}" } %></td>
    <td><a href='<%= "landmarks/#{landmark.id}/edit" %>'>***</a></td>
  </tr>
  <% end %>
</table>
