<h1>Edit Landmark: <%= @landmark.name %></h1>
<form method='POST'>
  <fieldset>
    Name: <input name='name' value='<%= @landmark.name %>'>
    Year completed: <input name='year_completed' value='<%= @landmark.year_completed %>'>
  </fieldset>
  <fieldset>  
    Figure: <input name='figure[name]' value='<%= @landmark.figure.name %>'><br>
    Titles:<br>
    <% Title.all.each do |title| %>
      <% if @landmark.figure.titles.include?(title) %>
        <input type='checkbox' name='figure[titles][]' value='<%= title.id %>' checked> <%= title.name %><br>
      <% else %>
        <input type='checkbox' name='figure[titles][]' value='<%= title.id %>'> <%= title.name %><br>
      <% end %>  
    <% end %>
  </fieldset>
  <input type='submit' value='Save'>
</form>