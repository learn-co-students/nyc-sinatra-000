<h1>Add a New Figure</h1>

<form action='/figures' method="POST">
  <label for="figure_name">Figure Name</label><br>
  <input id="figure_name" type="text" name="figure[name]"></br>

  <label for="new_landmark"> Landmark Name </label><br>
  <input id="new_landmark" type="text" name="landmark[name]"><br>

  <label for="new_title"> Title Name </label><br>
  <input id="new_title" type="text" name="title[name]"> </br>

  <% Landmark.all.each do |landmark| %>
  <label for='<%= "landmark_#{landmark.id}" %>'><%= "#{landmark.name}" %></label><br>
    <input id='<%= "landmark_#{landmark.id}" %>' type="checkbox" value="<%= landmark.id %>" name="figure[landmark_ids][]">
  <% end %>

  <% Title.all.each do |title| %>
  <label for='<%= "title_#{title.id}" %>'><%= "#{title.name}" %></label><br>
    <input id='<%= "title_#{title.id}" %>' type="checkbox" value="<%= title.id %>" name="figure[title_ids][]">
  <% end %>

  <input type="submit" value="Create New Figure">
</form>
